# bash
alias path="echo $PATH | tr -s ':' '\n'"
alias la="ls -A"
alias ll="ls -lat"
alias e="$EDITOR"
alias c="clear"
alias r="source $HOME/.bashrc"

# Ruby/Rails
alias b="bundle"
alias be="bundle exec"
alias rk="rake"
alias s="rspec"

# SVN
alias svm=svn
alias snv=svn
alias svns="svn stat --ignore-externals | grep -v X"
